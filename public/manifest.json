{
  "manifest_version": 3,
  "name": "Color Picker",
  "version": "1.0.0",
  "icons": {
    "48": "icon-48.png"
  },
  "background": {
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "activeTab", "clipboardRead", "clipboardWrite"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
